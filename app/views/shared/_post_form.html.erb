<%= form_with model: post, url: user_posts_path, method: :post, scope: :post do |f| %>
 
 <% flash.each do |type, msg| %>
  <div>
   <p class="text-danger">  <%= msg %> </p>
  </div>
<% end %>

  <div class="form-group">
  <%= f.label :title %>
    <%= f.text_field :title ,class: "form-control" %>
  </div>
     
    <div class="form-group">
      <%= f.label :text %>
    <%= f.text_area :text ,class: "form-control" %>
  </div>
    <%= f.submit  "Save" ,class: "mt-3 btn btn-primary btn-md" %>
 
<% end %>